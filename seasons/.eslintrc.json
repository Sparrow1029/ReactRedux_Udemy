{
    "extends": [
	    "eslint:recommended",
	    "plugin:react/recommended",
	    "prettier",
	    "prettier/react"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
	"prettier"
    ],
    "rules": {
	    "prettier/prettier": "error",
	    "no-console": "off"
    }
}
